<div {{bind-attr class=":stripe_loader session.isStripeLoaded:stripe_loaded"}}>

	<div class="billing_loading">
		Securely loading our payment form...
	</div>

	<form class="stripe_form billing_loaded">
		{{#if session.organization.hasCard}}
			
			<p class="current_card_paragraph">
				For <strong>{{session.organization.name}}</strong>, the credit card on file ends with <strong>{{session.organization.card.last4}}</strong>.
			</p>
			
			<button class="small white button" {{action 'changeCard'}}>Change my card</button>
		
		{{else}}
		
			<div class="field">
				<label for="number">Credit Card Number</label>
				<input type="text" id="number" data-stripe="number">
			</div>

			<div class="field">
				<label for="exp_month">Expiry Month</label>
				<select id="exp_month" data-stripe="exp-month">
					<option>1</option>
					<option>2</option>
					<option>3</option>
					<option>4</option>
					<option>5</option>
					<option>6</option>
					<option>7</option>
					<option>8</option>
					<option>9</option>
					<option>10</option>
					<option>11</option>
					<option>12</option>
				</select>
			</div>

			<div class="field">
				<label for="exp_year">Expiry Year</label>
				<select id="exp_year" data-stripe="exp-year">
					<option>2015</option>
					<option>2016</option>
					<option>2017</option>
					<option>2018</option>
					<option>2019</option>
					<option>2020</option>
					<option>2021</option>
					<option>2022</option>
					<option>2023</option>
					<option>2024</option>
				</select>
			</div>

			<div class="field">
				<label for="cvc">CVC (on back of card)</label>
				<input type="text" id="cvc" data-stripe="cvc" style="width: 4em; ">
			</div>
			
			<div class="app_actions">
				{{#if session.organization.isDirty}}
					<a href="#" {{action 'resetOrganization'}} class="cancel">Discard Changes</a>
				{{/if}}
			
				<button type="submit" class="button clickable" {{action 'saveOrganization'}}>
					Save New Card Info
				</button>
			</div>
	
		{{/if}}
		
	</form>

</div>