	<div class="clear"></div>
</div>

<table class="table">
	<thead>
		<tr>
			<th>First Name</th>
			<th>Last Name</th>
			<th>Email</th>
			<th>Last Seen</th>
			<th>First Added</th>
		</tr>
	</thead>
	
	<tbody>
		{{#each person in model}}
			<tr>
				<td>
					{{#link-to 'dashboard.people.person' person}}
						{{person.info.firstName}}
					{{/link-to}}
				</td>
				<td>
					{{#link-to 'dashboard.people.person' person}}
						{{person.info.lastName}}
					{{/link-to}}
				</td>
				<td>
					{{#link-to 'dashboard.people.person' person}}
						{{person.info.email}}
					{{/link-to}}
				</td>
				<td>
					{{#link-to 'dashboard.people.person' person}}
						{{#if person.lastSeenAt}}{{moment person.lastSeenAt 'lll'}}{{/if}}
					{{/link-to}}
				</td>
				<td>
					{{#link-to 'dashboard.people.person' person}}
						{{#if person.createdAt}}{{moment person.createdAt 'lll'}}{{/if}}
					{{/link-to}}
				</td>
			</tr>
		{{/each}}
	</tbody>
</table>