<ol class="store">
	{{#each app in apps}}
		<li class="app">
			{{#link-to 'dashboard.apps.store.app' app class="icon"}}
				<img {{bind-attr src=app.icon}}>
			{{/link-to}}

			<div class="meta">
				{{#link-to 'dashboard.apps.store.app' app class="name"}}
					{{app.name}}
				{{/link-to}}
			
				{{install-button app=app organization=session.organization}}
				
				<p class="excerpt">
					{{app.excerpt}}
				</p>
				
				<div class="align_right">
					{{#link-to 'dashboard.apps.store.app' app class="button small"}}
						Read More
					{{/link-to}}
				</div>
			</div>

			<div class="clear"></div>
		</li>
	{{/each}}
</ol>