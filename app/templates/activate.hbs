{{#modal-tools closable=false maxWidth='320px' logoTitle=true}}

	<form {{action "register" on="submit"}}>
		{{#if loading}}
			<div class="field">
				<p>Loading...</p>
			</div>
		{{else}}
			<div class="field">
				<label for="install_field_email">What is your <strong>name</strong>?</label>
				{{input type="text" id="install_field_name" value=name placeholder="Your Name" required=true}}
			</div>

			<div class="field">
				<label for="install_field_email">What is your <strong>email address</strong>?</label>
				{{input type="email" id="install_field_email" value=email placeholder="Email Address" required=true}}
			</div>

			<div class="field">
				<label for="install_field_password">Please choose a <strong>password</strong>.</label>
				{{input type="password" id="install_field_password" value=password placeholder="Password" required=true}}
			</div>

			<div class="field">
				<label for="install_field_token" class="force_show">Serial Number</label>
				{{input type="text" id="install_field_token" value=session.organization_id readonly="readonly"}}
			</div>
		{{/if}}
		
		<div class="modal_actions">
			<button type="submit" class="clickable button">
				Start Using Remetric &nbsp; &rarr;
			</button>
		</div>
	</form>


{{/modal-tools}}