{{#modal-tools maxWidth='320px' logoTitle=true}}

	<form {{action "retrievePassword" on="submit"}}>
		{{#if loading}}
			<div class="field">
				<p>Loading...</p>
			</div>
		{{else}}
			<div class="field">
				<label for="email">To help you retrieve your password, what is your <strong>email address</strong>?</label>
				{{input type="email" id="email" value=email placeholder="Email Address" required=true}}
			</div>
		{{/if}}
		
		<div class="modal_actions">
			<button type="submit" class="clickable button">
				Send Me A Password
			</button>
		</div>
	</form>
	
	{{#link-to 'signin' class='bottom_link'}}
		Already know your password?
	{{/link-to}}

{{/modal-tools}}